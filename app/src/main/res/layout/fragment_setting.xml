<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Settings"
        android:layout_margin="14dp"
        android:textColor="#3B95D3"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_notifications_none_24"
        android:layout_margin="16dp"
        />
    <ImageView
        android:id="@+id/imgPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgNotification"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_lock_24"
        android:layout_margin="16dp"
        />
    <ImageView
        android:id="@+id/imgStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgPrivacy"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_data_usage_24"
        android:layout_margin="16dp"/>
    <ImageView
        android:id="@+id/imgChatSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgStorage"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        android:layout_margin="16dp"/>
    <ImageView
        android:id="@+id/imgFolders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgChatSetting"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_folder_open_24"
        android:layout_margin="16dp"/>
    <ImageView
        android:id="@+id/imgDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgFolders"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_devices_24"
        android:layout_margin="14dp"/>
    <ImageView
        android:id="@+id/imgLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgDevices"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_language_24"
        android:layout_margin="14dp"/>

    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgNotification"
        app:layout_constraintTop_toBottomOf="@id/tvSettings"
        android:text="Notification and Sounds"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgPrivacy"
        app:layout_constraintTop_toBottomOf="@id/tvNotification"
        android:text="Privacy and Security"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tvStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgStorage"
        app:layout_constraintTop_toBottomOf="@id/tvPrivacy"
        android:text="Data and Storage"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tvChatSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgChatSetting"
        app:layout_constraintTop_toBottomOf="@id/tvStorage"
        android:text="Chat Settings"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tvFolders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgFolders"
        app:layout_constraintTop_toBottomOf="@id/tvChatSetting"
        android:text="Folders"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tvDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgDevices"
        app:layout_constraintTop_toBottomOf="@id/tvFolders"
        android:text="Devices"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgLanguage"
        app:layout_constraintTop_toBottomOf="@id/tvDevices"
        android:text="Language"
        android:layout_margin="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvNotification"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrivacy"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvStorage"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvChatSetting"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvFolders"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvDevices"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#239F9F9F"
        android:layout_margin="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>