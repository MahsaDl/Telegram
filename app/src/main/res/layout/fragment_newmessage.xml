<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_people_outline_24"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tvNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Group"
            android:layout_toRightOf="@id/imgNewGroup"
            android:layout_margin="18dp"
            android:textColor="#222222"/>
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_lockk_24"
            android:layout_below="@id/imgNewGroup"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tvSecretChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Secret Chat"
            android:layout_below="@id/tvNewGroup"
            android:layout_toRightOf="@id/imgLock"
            android:layout_margin="15dp"
            android:textColor="#222222"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Channel"
            android:layout_below="@id/tvSecretChat"
            android:layout_toRightOf="@id/imgLock"
            android:layout_margin="14dp"
            android:textColor="#222222"/>
        <ImageView
            android:id="@+id/imgNewChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_campaign_24"
            android:layout_below="@id/imgLock"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tvSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorted by last seen time"
            android:textColor="#82878A"
            android:layout_below="@id/imgNewChannel"
            android:background="#F5F5F5"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerNewMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvSort"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>